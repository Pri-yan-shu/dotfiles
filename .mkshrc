__cd(){
    if \builtin cd "$@"; then
        zoxide add "$(pwd)" >/dev/null 2>&1
        return 0
    else
        return 1
    fi
}

md() {
	mkdir -p "$@" && cd -P "$@"
}

k() {
	if [ -z $(kak -l | grep $(basename $PWD)) ]; then
		kak -s $(basename $PWD) $@
	else
		kak -c $(basename $PWD) $@
	fi
}

z() {
	result=$(command zoxide query -l | fzy -l4 -c2) && $@ "${result}"
}

bind '^[[A'="search-history-up"
bind '^[[B'="search-history-down"

bind -m '^Z'='zcd^M'
bind -m '^X'='ls^M'
bind -m '^V'='cd ..^M'
bind -m '^[[B'='^I'
bind -m '/'='/^I'
# bind -m '^[ '=' | l^M'

